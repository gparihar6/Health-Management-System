print('Star Pattern!')
try:
    n=int(input("Enter the number of rows you want in your pattern : "))
    b=int(input('Enter 1 for ascending or 0 for descending : '))
    if b==1:
        c=1
        while c<=n:
            print("*"*c)
            c=c+1
    elif b==0:
        while n>0:
            print('*'*n)
            n=n-1
    else:
        print("Input required for pattern : 0 or 1 only")
except Exception:
    print("Invalid input!\nNumber of rows should be numeric & input for pattern should be 0 or 1 only.")
